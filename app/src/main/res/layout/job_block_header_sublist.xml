<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorGreyLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/image6"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_company_icon_black_24dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_utovar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_utovar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/utovar" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/image5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_perm_identity_black_24dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_vozac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <EditText
                android:id="@+id/input_vozac"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dodjeljeni_vozac"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/addDriverIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            app:srcCompat="@drawable/ic_add_box_black_24dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnAddJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Dodaj posao"
        android:layout_margin="15dp"/>

</LinearLayout>